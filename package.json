{
    "name": "stopka",
    "version": "0.0.5",
    "description": "Stop the layout shift caused by loading media assets.",
    "author": "Elringus (https://elringus.me)",
    "license": "MIT",
    "keywords": ["CLS", "preloading", "remote assets", "precompute size", "rollup", "vite", "markdown-it", "vitepress"],
    "repository": { "type": "git", "url": "https://github.com/Elringus/Stopka.git" },
    "funding": "https://github.com/sponsors/Elringus",
    "homepage": "https://github.com/Elringus/Stopka#readme",
    "bugs": { "url": "https://github.com/Elringus/Stopka/issues" },
    "main": "dist/stopka.js",
    "module": "dist/stopka.mjs",
    "types": "dist/types/index.d.ts",
    "type": "module",
    "files": ["dist"],
    "sideEffects": false,
    "scripts": {
        "clear-pre": "rimraf dist",
        "clear-post": "rimraf --glob dist/types/**/*.js dist/types/**/*.map",
        "compile": "tsc",
        "bundle": "rollup --config",
        "build": "npm run clear-pre && npm run compile && npm run bundle && npm run clear-post",
        "publish-npm": "npm publish"
    },
    "dependencies": {
        "axios": "^1.4.0",
        "magic-string": "^0.30.0",
        "ffprobe": "^1.1.2",
        "ffprobe-static": "^3.1.0"
    },
    "devDependencies": {
        "typescript": "^5.1.3",
        "tslib": "^2.5.3",
        "rollup": "^3.24.0",
        "rimraf": "^5.0.1",
        "@rollup/plugin-typescript": "^11.1.1",
        "@types/markdown-it": "^12.2.3",
        "@types/node": "^20.2.5"
    }
}
