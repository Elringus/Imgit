{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["esnext", "DOM"],
        "moduleResolution": "node",
        "esModuleInterop": false,
        "strict": true,
        "strictNullChecks": true,
        "outDir": "build",
        "declaration": true,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true
    },
    "include": ["src"]
}
